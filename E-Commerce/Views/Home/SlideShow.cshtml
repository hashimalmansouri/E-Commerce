@model IEnumerable<E_Commerce.Models.SlideShow>
<head>
    <link href="~/Content/bootstrap-4.4.1.min.css" rel="stylesheet" />
    <link href="~/Content/myStyle.css" rel="stylesheet" />
</head>

    <div id="slider" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0" class="active"></li>
            <li data-target="#slider" data-slide-to="1"></li>
            <li data-target="#slider" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Images/SlideShows/slides (2).jpg" alt="First Slide" width="100%" height="400">
                <div class="carousel-caption">
                    <h3 style="color:black;">New</h3>
                    <p style="color: black;font-size:20px">New HUAWEI Phone with Dual Camera</p>
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="carousel-item">
                    <img src="~/Content/Images/SlideShows/@item.ImageUrl" alt="@item.ImageAlt" width="100%" height="400">
                    <div class="carousel-caption">
                        <h3 style="color:black;">@item.Title</h3>
                        <p style="color: black;font-size:20px">@item.Caption</p>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#slider" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#slider" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
