@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                <i class="fa fa-sign-out">
                </i>
                Log off
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index","Manage")">
                <i class="fa fa-user-circle-o">
                </i>
                @User.Identity.GetUserName()
            </a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Register", "Account", new { id = "registerLink" })">
                <i class="fa fa-user">
                </i>
                Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Account", new { id = "loginLink" })">
                <i class="fa fa-sign-in">
                </i>
                Log in
            </a>
        </li>
    </ul>
}
